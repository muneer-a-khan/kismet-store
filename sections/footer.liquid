<!-- KW Footer — Deduplicate & keep only one copy inside the footer -->
<script id="kw-footer-dedupe" defer>
document.addEventListener('DOMContentLoaded', function () {
  var footer = document.querySelector('footer, .footer');
  var topArea = document.querySelector('.footer__content-top') || footer;

  // Find all versions of our injected block
  var blocks = Array.prototype.slice.call(
    document.querySelectorAll('#kw-footer-inject, .kw-footer-inject')
  );

  if (!blocks.length) return;

  var keptOne = false;

  blocks.forEach(function (el) {
    var insideFooter = footer && footer.contains(el);

    if (!keptOne) {
      // First one we encounter becomes the keeper.
      keptOne = true;

      // If the keeper is NOT inside the footer, move it into the footer top area.
      if (!insideFooter && topArea) {
        topArea.appendChild(el);
      }
      return; // keep this one
    }

    // Any additional copy (including any that sit UNDER the footer): remove it
    try {
      el.parentNode && el.parentNode.removeChild(el);
    } catch (e) {}
  });
});
</script>
