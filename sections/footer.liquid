    if (label === 'contact' || label === 'contact us') {
      if (a.getAttribute('href') !== CONTACT) a.setAttribute('href', CONTACT);
    }

    // Fix Accessibility links
    if (label === 'accessibility' || label === 'accessibility statement') {
