<script id="kw-footer-cleanup" defer>
document.addEventListener('DOMContentLoaded', function () {
  function run() {
    // bottom bar that usually holds the duplicate icons/policies
    var bottom = document.querySelector('.footer .footer__content-bottom, footer .footer__content-bottom, .footer__content-bottom');
    if (!bottom) return;

    var isDesktop = window.matchMedia('(min-width: 990px)').matches;

    // hide these ONLY on desktop (keep mobile unchanged)
    var socialNodes = bottom.querySelectorAll('.list-social, .footer__social, [data-footer-social]');
    var policyNodes = bottom.querySelectorAll('.policies, .policies__list, .footer__policies, ul[class*="policies"]');

    socialNodes.forEach(function (n) { n.style.display = isDesktop ? 'none' : ''; });
    policyNodes.forEach(function (n) { n.style.display = isDesktop ? 'none' : ''; });
  }

  run();
  window.addEventListener('resize', run);
});
</script>
<!-- KW: Remove the social icons that sit above the newsletter ("Subscribe to our emails") -->
<script id="kw-hide-top-social" defer>
document.addEventListener('DOMContentLoaded', function(){
  // Top area that holds the footer columns in Dawn
  var topArea = document.querySelector('.footer .footer__content-top, footer .footer__content-top, .footer__content-top');
  if (!topArea) return;

  // Find the newsletter block
  var newsletters = topArea.querySelectorAll('.footer-block--newsletter, [data-newsletter], form[action*="contact#newsletter"]');

  var hidOne = false;
  newsletters.forEach(function(nw){
    // Walk backward to find the nearest social block just above the newsletter
    var prev = nw.previousElementSibling;
    while (prev) {
      var isSocialBlock = prev.classList && (
        prev.classList.contains('footer-block--social') ||
        prev.querySelector('.list-social')
      );
      if (isSocialBlock) {
        prev.style.display = 'none';
        hidOne = true;
        break;
      }
      prev = prev.previousElementSibling;
    }
  });

  // Fallback: if we didn’t find the adjacent one, hide the first social block
  // ONLY if it appears before the newsletter in the same top area.
  if (!hidOne) {
    var social = topArea.querySelector('.footer-block--social, .list-social');
    var newsletter = topArea.querySelector('.footer-block--newsletter, [data-newsletter], form[action*="contact#newsletter"]');
    if (social && newsletter) {
      // check DOM order: social before newsletter?
      var node = social.closest('.footer-block') || social;
      var next = node.nextElementSibling, socialBeforeNewsletter = false;
      while (next) {
        if (next.contains(newsletter) || next === newsletter) { socialBeforeNewsletter = true; break; }
        next = next.nextElementSibling;
      }
      if (socialBeforeNewsletter) {
        (social.closest('.footer-block') || social).style.display = 'none';
      }
    }
  }
});
</script>
