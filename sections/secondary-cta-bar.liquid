{%- comment -%}
  Secondary CTA Bar
  A horizontal bar with secondary action buttons
{%- endcomment -%}

<section id="secondary-cta-{{ section.id }}" class="secondary-cta-bar">
  <div class="page-width">
    <div class="secondary-cta-container">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'cta_button' -%}
            <a 
              href="{{ block.settings.button_link | default: '#' }}" 
              class="secondary-cta-button"
              {{ block.shopify_attributes }}
            >
              {%- if block.settings.button_icon != blank -%}
                <span class="secondary-cta-icon">{{ block.settings.button_icon }}</span>
              {%- endif -%}
              <span class="secondary-cta-text">{{ block.settings.button_text | default: 'Click Here' }}</span>
              {%- if block.settings.show_arrow -%}
                <span class="secondary-cta-arrow">‚Üí</span>
              {%- endif -%}
            </a>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .secondary-cta-bar {
    background: {{ section.settings.background_color | default: '#f8f9fa' }};
    padding: {{ section.settings.padding_y | default: 20 }}px 0;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }
  
  .secondary-cta-container {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    flex-wrap: wrap;
  }
  
  .secondary-cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: {{ section.settings.button_background | default: 'rgba(255, 255, 255, 0.9)' }};
    color: {{ section.settings.button_color | default: '#333' }};
    text-decoration: none;
    border-radius: 25px;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    border: 2px solid {{ section.settings.button_border | default: 'rgba(0, 0, 0, 0.1)' }};
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    white-space: nowrap;
  }
  
  .secondary-cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
    background: {{ section.settings.button_hover_bg | default: '#ffffff' }};
    color: {{ section.settings.button_hover_color | default: '#ff4081' }};
    text-decoration: none;
  }
  
  .secondary-cta-icon {
    font-size: 1.1rem;
  }
  
  .secondary-cta-arrow {
    font-weight: bold;
    transition: transform 0.3s ease;
  }
  
  .secondary-cta-button:hover .secondary-cta-arrow {
    transform: translateX(3px);
  }
  
  @media (max-width: 600px) {
    .secondary-cta-container {
      flex-direction: column;
      gap: 0.75rem;
    }
    
    .secondary-cta-button {
      width: 100%;
      justify-content: center;
    }
  }
  
  {%- if section.settings.enable_sticky -%}
  @media (min-width: 768px) {
    .secondary-cta-bar {
      position: sticky;
      top: 0;
      z-index: 100;
      box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
    }
  }
  {%- endif -%}
</style>

